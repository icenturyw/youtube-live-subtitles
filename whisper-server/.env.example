# MongoDB 配置 (可选)
# 如果不设置，将使用默认值或仅使用本地缓存模式
MONGO_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_DB_NAME=youtube_subtitles
MONGO_COLLECTION_NAME=videos

# Whisper 模型配置 (本地识别)
# 可选模型: tiny, base, small, medium, large-v3, large-v3-turbo
MODEL_SIZE=large-v3-turbo
# 运行设备: cuda (推荐有 N 卡使用), cpu
DEVICE=cuda
# 计算精度: float16 (GPU 推荐), int8 (CPU 推荐), float32
COMPUTE_TYPE=float16
# CPU 线程数 (仅当使用 CPU 时有效)
CPU_THREADS=8
# 并行工作进程数
NUM_WORKERS=4

# Supabase 配置 (可选)
# 用户持久化和同步字幕数据
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-anon-key

# API Keys (可选)
GROQ_API_KEY=gsk_your_groq_api_key_here
OPENAI_API_KEY=sk-your_openai_api_key_here
SILICONFLOW_API_KEY=sk-your_siliconflow_api_key_here

# Cloudflare Workers AI (可选)
# 获取方式：https://dash.cloudflare.com/ -> AI -> Workers AI
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Qwen3-ASR API 配置 (可选)
# 如果已部署 Qwen3-ASR Gradio 服务，设置其地址
QWEN3_ASR_API_URL=http://10.242.15.77:8000/

# LM Studio Configuration (Optional for Correction/Translation)
# 如果您本地运行了 LM Studio，可以取消注释
# LM_STUDIO_API_URL=http://localhost:1234/v1
# LM_STUDIO_MODEL_NAME=local-model

# Server Configuration
PORT=8765
# 服务器鉴权 Key (Header X-API-Key)
API_AUTH_KEY=your-secret-key

# Proxy Configuration (Optional)
# 用于下载 YouTube 视频或访问被墙的 API
HTTP_PROXY=http://127.0.0.1:7890
HTTPS_PROXY=http://127.0.0.1:7890
